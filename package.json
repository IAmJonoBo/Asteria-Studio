{
  "name": "asteria-studio",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "lint": "pnpm -C apps/asteria-desktop lint",
    "test": "pnpm -C apps/asteria-desktop test",
    "build": "pnpm -C apps/asteria-desktop build",
    "golden:generate": "pnpm -C apps/asteria-desktop golden:generate",
    "golden:bless": "pnpm -C apps/asteria-desktop golden:bless",
    "golden:test": "pnpm -C apps/asteria-desktop golden:test"
  },
  "packageManager": "pnpm@10.28.2",
  "devDependencies": {
    "@eslint/js": "9.39.2",
    "@typescript-eslint/eslint-plugin": "8.54.0",
    "@typescript-eslint/parser": "8.54.0",
    "eslint": "9.39.2",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "7.0.1",
    "typescript-eslint": "8.54.0"
  }
}
